<%= erb :header %>

<div class="container">
  <div class="row">
    <div class="span6">
      <h2>Sign in</h2>
    </div>
  </div>
  <form action="/signin" method="POST">
    <p><input class="form-control input-lg" name="student_id" placeholder="Student ID" id="student_id" autofocus></p>
    <button type="submit" class="btn btn-success btn-lg" id="scanSubmit">Sign in</button>
  </form>
  <div id="signed-in-list" class="col-lg-4">
    <%= erb :signed_in_list %>
  </div>
</div>
<script>
  setInterval(function() {
    $.get("/lab_sessions/open", function(html) {
      $("#signed-in-list").html(html);
    });
  }, 120000);
</script>

<%= erb :footer %>
