<%= erb :header %>

<div class="container">
  <h2>Leader Board</h2>
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Project Hours</th>
    </tr>
    <% Student.sort_by(&:project_hours).reverse.each do |student, index| %>
      <tr>
        <td><%= index %></td>
        <td>
          <a href="/students/<%= student.id %>"><%= student.first_name %> <%= student.last_name %></a>
        </td>
        <td><%= student.project_hours.round(1) %></td>
      </tr>
    <% end %>
  </table>
  <% if @user.has_permission?("HOURS_VIEW_REPORT") %>
    <h4><a href="/csv_report">Download CSV Report</a></h4>
  <% end %>
</div>

<%= erb :footer %>
